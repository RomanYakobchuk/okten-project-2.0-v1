{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "target": "ESNext",
    "rootDir": "src",
    "allowJs": true,
    "outDir": "build",
    "noEmitOnError": false,
    "noImplicitAny": false,
    "pretty": false,
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "typeRoots": ["./global.d.ts", "./node_modules/@types", "../common/**/*"]
  },
  "include": ["src/**/*", "../app/server/src/dataBase", "../common/**/*"],
  "exclude": ["node_modules", "../app/server/src/dataBase"]
}
